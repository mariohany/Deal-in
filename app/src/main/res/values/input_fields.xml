        <item name="android:textColor">@color/dark_blue</item>
        <item name="iconTint">@color/dark_blue</item>
        <item name="iconTintMode">src_atop</item>
    </style>

    <style name="DefaultInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/default_input_edit_text_selector</item>
        <item name="android:textAppearance">@style/BaseTextView.Medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="iconTint">@color/dark_blue</item>
        <item name="iconTintMode">src_atop</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="DefaultAmountInput" parent="Widget.AppCompat.EditText">
